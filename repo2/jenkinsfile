pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/bangkit-pukulrata/machine-learning.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Run Notebooks') {
            steps {
                sh '''
                    . venv/bin/activate
                    jupyter nbconvert --execute --inplace notebooks/*.ipynb
                '''
            }
        }
    }
}
